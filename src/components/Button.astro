---
const {variant, size} = Astro.props
---

<button class={variant + " " + size}><slot /></button>

<style>
button{
    padding: 1rem;
}
.primary{
    background-color: seagreen;
    color: white;
}

.secondary{
    background-color: lightcoral;
    color: white;
}

.small{
    font-size: 1rem;
}

.medium{
    font-size: 2rem;
}

.large{
    font-size: 3rem;
}

</style>